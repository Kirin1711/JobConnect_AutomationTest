@model jobconnect.Models.Application

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_MasterLayout2.cshtml";
}

<h1 class="text-center mb-4">Duyệt Hồ Sơ Ứng Tuyển</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit">
                        <!-- Validation Summary -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <input type="hidden" asp-for="ApplicationId" />

                        <!-- CV -->
                        <div class="form-floating mb-3">
                            <input asp-for="Cv" class="form-control" placeholder="Chọn CV" />
                            <label asp-for="Cv">CV</label>
                            <span asp-validation-for="Cv" class="text-danger"></span>
                        </div>

                        <!-- Cover Letter -->
                        <div class="form-floating mb-3">
                            <input asp-for="CoverLetter" class="form-control" placeholder="Nhập Thư Xin Việc" />
                            <label asp-for="CoverLetter">Thư Xin Việc</label>
                            <span asp-validation-for="CoverLetter" class="text-danger"></span>
                        </div>

                        <!-- Application Date -->
                        <div class="form-floating mb-3">
                            <input asp-for="ApplicationDate" class="form-control" placeholder="Chọn Ngày Nộp" />
                            <label asp-for="ApplicationDate">Ngày Nộp</label>
                            <span asp-validation-for="ApplicationDate" class="text-danger"></span>
                        </div>

                        <!-- Job -->
                        <div class="mb-3">
                            <label asp-for="JobId" class="form-label">Công Việc</label>
                            <select asp-for="JobId" class="form-select" asp-items="ViewBag.JobId">
                                <option value="">Chọn Công Việc</option>
                            </select>
                            <span asp-validation-for="JobId" class="text-danger"></span>
                        </div>

                        <!-- User -->
                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label">Ứng Viên</label>
                            <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId">
                                <option value="">Chọn Ứng Viên</option>
                            </select>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>

                        <!-- Status -->
                        <div class="mb-3">
                            <label asp-for="StatusId" class="form-label">Trạng Thái</label>
                            <select asp-for="StatusId" class="form-select" asp-items="ViewBag.StatusId">
                                <option value="">Chọn Trạng Thái</option>
                            </select>
                            <span asp-validation-for="StatusId" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Lưu Thay Đổi</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Back Button -->
    <div class="mt-3">
        <a asp-action="Index1" class="btn btn-link">Quay lại danh sách</a>
    </div>
</div>


