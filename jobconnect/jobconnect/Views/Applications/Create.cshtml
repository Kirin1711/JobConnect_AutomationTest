@model jobconnect.Models.Application

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_MasterLayout1.cshtml";
}


<head>
    <meta charset="utf-8">
    <title>Job Connect</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Inter:wght@700;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->

    <link rel="stylesheet" type="text/css" href="@Url.Content("~/lib/animate/animate.min.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/lib/owlcarousel/assets/owl.carousel.min.css")" />

    <!-- Customized Bootstrap Stylesheet -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />

    <!-- Template Stylesheet -->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/style.css")" />
</head>


<div class="container-xxl py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <!-- Card chứa form -->
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h3 class="mb-0">Nộp Hồ Sơ</h3>
                </div>
                <div class="card-body p-4">
                    <!-- Form -->
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Upload CV -->
                        <div class="mb-4">
                            <label asp-for="Cv" class="form-label fw-bold">
                                <i class="bi bi-file-earmark-text-fill"></i> Tải lên CV
                            </label>
                            <input asp-for="Cv" type="file" class="form-control" placeholder="Chọn tệp CV của bạn" />
                            <span asp-validation-for="Cv" class="text-danger"></span>
                        </div>

                        <!-- Upload Cover Letter -->
                        <div class="mb-4">
                            <label asp-for="CoverLetter" class="form-label fw-bold">
                                <i class="bi bi-envelope-fill"></i> Tải lên Cover Letter
                            </label>
                            <input asp-for="CoverLetter" type="file" class="form-control" placeholder="Chọn tệp Cover Letter của bạn" />
                            <span asp-validation-for="CoverLetter" class="text-danger"></span>
                        </div>

                        <!-- Job Title -->
                        <div class="mb-4">
                            <label for="jobTitle" class="form-label fw-bold">
                                <i class="bi bi-briefcase-fill"></i> Công việc
                            </label>
                            <input type="text" class="form-control bg-light" id="jobTitle" value="@ViewBag.JobTitle" readonly />
                            <input type="hidden" asp-for="JobId" value="@ViewBag.JobId" />
                        </div>

                        <!-- User ID và Status ID -->
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="StatusId" />

                        <!-- Nút gửi -->
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="bi bi-send-fill"></i> Gửi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

