@model jobconnect.Models.Company

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_MasterLayout3.cshtml";
}

<h1 class="text-center mb-4">Chỉnh Sửa Công Ty</h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="CompanyId" />

                        <!-- Tên Công Ty -->
                        <div class="form-floating mb-3">
                            <input asp-for="CompanyName" class="form-control" placeholder="Nhập tên công ty" />
                            <label asp-for="CompanyName">Tên Công Ty</label>
                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                        </div>

                        <!-- Địa Chỉ -->
                        <div class="form-floating mb-3">
                            <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ" />
                            <label asp-for="Address">Địa Chỉ</label>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <!-- Số Điện Thoại -->
                        <div class="form-floating mb-3">
                            <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại" />
                            <label asp-for="Phone">Số Điện Thoại</label>
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <!-- Email -->
                        <div class="form-floating mb-3">
                            <input asp-for="EmailCompanies" type="email" class="form-control" placeholder="Nhập email" />
                            <label asp-for="EmailCompanies">Email</label>
                            <span asp-validation-for="EmailCompanies" class="text-danger"></span>
                        </div>

                        <!-- Trang Web -->
                        <div class="form-floating mb-3">
                            <input asp-for="Website" class="form-control" placeholder="Nhập trang web" />
                            <label asp-for="Website">Trang Web</label>
                            <span asp-validation-for="Website" class="text-danger"></span>
                        </div>

                        <!-- Ảnh Đại Diện -->
                        <div class="mb-4">
                            <label for="form-label fw-bold">Ảnh Hiện Tại</label>
                            <!-- Hiển thị ảnh hiện tại -->
                            <div class="text-center mb-3">
                                @if (!string.IsNullOrEmpty(Model.AvartarCompanies))
                                {
                                    <img src="/images/@Model.AvartarCompanies" alt="Ảnh Hiện Tại" width="100" class="img-fluid rounded shadow" />
                                }
                                else
                                {
                                    <p class="text-muted">Chưa có ảnh.</p>
                                }
                            </div>
                            <!-- Input để chọn ảnh mới -->
                            <input type="file" name="AvatarFile" class="form-control border-primary" />
                            <span asp-validation-for="AvartarCompanies" class="text-danger"></span>
                        </div>

                        <!-- Lĩnh Vực -->
                        <div class="mb-3">
                            <label asp-for="FieldId" class="form-label">Lĩnh Vực</label>
                            <select asp-for="FieldId" class="form-select" asp-items="ViewBag.FieldId"></select>
                            <span asp-validation-for="FieldId" class="text-danger"></span>
                        </div>

                        <!-- Các Nút -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Lưu</button>
                            <a asp-action="Index3" class="btn btn-secondary btn-lg">Quay Lại Danh Sách</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

