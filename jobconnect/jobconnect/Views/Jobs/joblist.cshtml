@using jobconnect.Models 
@model IEnumerable<jobconnect.Models.Job>  // Hoặc kiểu dữ liệu khác nếu có


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job List</title>
</head>
<body>
    <h1>List of Jobs</h1>

    <!-- Khu vực hiển thị danh sách công việc -->
    <ul id="jobList"></ul>

    <script>
        // Gọi API và hiển thị dữ liệu
        fetch('/api/JobsApi')
            .then(response => response.json())  // Chuyển đổi dữ liệu trả về thành JSON
            .then(data => {
                const jobListElement = document.getElementById('jobList');
                // Duyệt qua danh sách công việc và hiển thị chúng
                data.forEach(job => {
                    const li = document.createElement('li');
                    li.textContent = `${job.title} - ${job.location}`;
                    jobListElement.appendChild(li);
                });
            })
            .catch(error => {
                console.error('Error fetching jobs:', error);
            });
    </script>
</body>
</html>
