@model jobconnect.Models.User

@{
    ViewData["Title"] = "Edit3";
    Layout = "~/Views/Shared/_MasterLayout3.cshtml";
}
<head>
    <link rel="stylesheet" href="@Url.Content("~/css/Edit.css")" />
</head>

<div class="container mt-5" style="margin-bottom:48px;">
    <div class="card shadow-lg p-4 border-0" style="border-radius:20px;">
        <h2 class="text-center mb-4 text-primary">Chỉnh sửa thông tin</h2>

        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            <div class="mb-3">
                <label asp-for="Username" class="form-label fw-bold">Tài khoản</label>
                <input asp-for="Username" class="form-control border-primary" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-bold">Mật khẩu</label>
                <input asp-for="Password" class="form-control border-primary" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FullName" class="form-label fw-bold">Họ tên</label>
                <input asp-for="FullName" class="form-control border-primary" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold">Email</label>
                <input asp-for="Email" class="form-control border-primary" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label>Vai trò</label>
                <input type="text" class="form-control" value="Applicant" readonly />
            </div>
            <div class="mb-3">
                <label asp-for="DateOfBirth" class="form-label fw-bold">Ngày sinh</label>
                <input asp-for="DateOfBirth" class="form-control border-primary" type="date" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label fw-bold">Số điện thoại</label>
                <input asp-for="PhoneNumber" class="form-control border-primary" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="IsActive" class="form-label fw-bold">Trạng thái</label>
                <input asp-for="IsActive" class="form-control border-primary" />
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <label for="form-label fw-bold">Ảnh hiện tại</label>
                <!-- Hiển thị ảnh hiện tại của người dùng -->
                <div class="text-center mb-3">
                    @if (!string.IsNullOrEmpty(Model.AvatarUrl))
                    {
                        <img src="/images/@Model.AvatarUrl" alt="Current Avatar" width="100" class="img-fluid rounded shadow" />
                    }
                    else
                    {
                        <p class="text-muted">Chưa có ảnh.</p>
                    }
                </div>
                <!-- Input để chọn ảnh mới -->
                <input type="file" name="AvatarFile" class="form-control border-primary" />
                <span asp-validation-for="AvatarUrl" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-center">
                <input type="submit" value="Cập nhật" class="btn btn-primary btn-lg" />
            </div>
        </form>
        <div>
            <a asp-action="Index3">Trở về</a>
        </div>
    </div>
</div>